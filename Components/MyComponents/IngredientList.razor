@namespace MyComponents.IngredientList
@rendermode InteractiveServer
@inject CircleHospitalityContext Context
@using System
@using System.Linq

<div class="container">
    <input type="text" class="form-control-sm" placeholder="search" @bind="searchInput" />
    <div class="list-group overflow-auto" style="max-height: 150px; min-height: 150px">
        <ul>
            @foreach (Ingredient ingredient in Context.Ingredients.Where(i => i.IngredientName!.Contains(searchInput)))
            {
                <li class="list-group-item d-flex">
                    <input 
                        class="form-check-input me-2" 
                        type="checkbox" 
                        id="@ingredient.IngredientID"
                        value="@ingredient.IngredientID" 
                        onclick="() => checkedIngredients.Add(ingredient)"
                        />
                    <label 
                        class="form-check-label"
                        for="@ingredient.IngredientID">
                        @ingredient.IngredientName
                        </label>
                </li>
            }
        </ul>
    </div>
</div>
<div class="container">
    <ul>
        @foreach (Ingredient ingredient1 in checkedIngredients)
        {
            <li>@ingredient1.IngredientName</li>
        }
    </ul>
</div>

@code {
    string searchInput = "";

    public bool isChecked { get; set; }
    public Ingredient? ingredient { get; set; }
    public ICollection<Ingredient>? checkedIngredients { get; set; }
}
